# Foreman proxy to which reports should be uploaded
:server: '<%= @server %>'
:port: <%= @port %>

# SSL specific options
:ca_file: '<%= @ca_file %>'
# this client certificate, usually the same that puppet agent use
:host_certificate: '<%= @host_certificate %>'
# this client private key, usually the same that puppet agent use
:host_private_key: '<%= @host_private_key %>'

# policy (key is id as in Foreman)
<% @policies.each do |policy| %>
<%= policy['id'] -%>:
  :profile: '<%= policy['profile_id'] -%>'
  :content_path: '<%= policy['content_path'] -%>'
<% end %>
